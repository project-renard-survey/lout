  #############################################################################

  # leftcaption		{ 			}
  # rightcaption	{ 			}
  # abovecaption	{ 			}
  # belowcaption	{ 			}
  # leftgap		{ 0.5c			}
  # rightgap		{ 0.5c			}
  # abovegap		{ 0.5c			}
  # belowgap		{ 0.5c			}
  # hidecaptions	{ yes			}

  #############################################################################
  #                                                                           #
  #  Slice options                                                            #
  #                                                                           #
  #############################################################################

  # weight		{ 1			}
  # paint		{ none			}
